    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ConeixementVM}">
        <view:Coneixement/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AddKnowledgeVM}">
        <view:AddKnowledge/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AddKnowledgeValueVM}">
