<Application x:Class="ThumbLedge.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ThumbLedge"
             xmlns:ut="clr-namespace:ThumbLedge.Utilities"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>     
        
        <ResourceDictionary>
            
            <!--Recursos per als estils-->
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Styles/Button.xaml"/>
                <ResourceDictionary Source="Styles/TextBox.xaml"/>
                <ResourceDictionary Source="Styles/PasswordBox.xaml"/>
                <ResourceDictionary Source="Styles/TextBlock.xaml"/>
                <ResourceDictionary Source="Styles/Image.xaml"/>
                <ResourceDictionary Source="Styles/TreeView.xaml"/>
                <ResourceDictionary Source="Styles/ComboBox.xaml"/>
                
                <!--Recurs per al data template--> 
                <ResourceDictionary Source="Utilities/DataTemplate.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>

            <!--Conversor per passar per parametre més d'un valor-->
            <ut:MultiParameterConverter x:Key="MultiParameterConverter"/>

        </ResourceDictionary>      
        
    </Application.Resources>
</Application>
