<Window x:Class="ThumbLedge.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:local="clr-namespace:ThumbLedge.View"
        xmlns:vm="clr-namespace:ThumbLedge.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="CanMinimize">

    <Window.DataContext>
        <vm:MainWindowVM/>
    </Window.DataContext>

    <Grid>
        <ContentControl x:Name="MainPages"
                        Content="{Binding MainView}"/>
        
        <Border Name="TopBorder" Height="20" Width="800" VerticalAlignment="Top" Background="White" Opacity="0" Cursor="Hand" MouseLeftButtonDown="Border_MouseLeftButtonDown"/>
    </Grid>
</Window>
