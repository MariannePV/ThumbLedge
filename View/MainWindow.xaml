        <Border CornerRadius="20" Background="CadetBlue"/>
        
        <!--<MediaElement Source="Videos/backgroundStart.mp4"
                    Name="backgroundVideo"
                    LoadedBehavior="Play"
                    UnloadedBehavior="Stop"
                    Stretch="Fill"/>-->

        <Button x:Name="CloseApp"
